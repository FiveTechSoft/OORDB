#include "oordb.ch"

CLASS TTool FROM TTable
  DEFINE FIELDS
  DEFINE PRIMARY INDEX
  
  PROPERTY TableFileName VALUE "data/Tool"
  
ENDCLASS

BEGIN FIELDS CLASS TTool
  ADD INTEGER FIELD "ToolId"
  ADD STRING FIELD "Name" SIZE 20
END FIELDS

BEGIN PRIMARY INDEX CLASS TTool
  DEFINE INDEX "Primary" KEYFIELD "ToolId" AUTOINCREMENT
END PRIMARY INDEX
